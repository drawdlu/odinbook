<%= turbo_frame_tag "new_comment_#{post.id}" do %>
    <%= form_with model: comment, url: post_comments_path do |f| %>
        <% comment.errors.full_messages.each do |message| %>
            <%= message %>
        <% end %>
        <%= f.text_field :body %>
        <%= f.submit "Comment" %>
        <%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>
<% end %>
