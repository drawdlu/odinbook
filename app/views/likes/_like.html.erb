<% likes = post.likes.count %>
<%= likes if likes > 0 %>
<% if post.liked_by?(Current.user) %>
    <%= link_to "Unlike", 
        like_path(id: post.get_like_id(Current.user), post_id: post.id), 
        data: { turbo_method: :delete, turbo_stream: true } %>
<% else %>
    <%= link_to "Like", likes_path(post_id: post.id), data: { turbo_method: :post, turbo_stream: true } %>
<% end %>
