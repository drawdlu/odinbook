<%= turbo_frame_tag "main-content" do %>
    <div class="container">
        <div class="page profile">
            <div class="title">
                <%= render "profiles/navigation" %>
            </div>
            <%= turbo_frame_tag "profile-pages", data: { page_id: "followers-link" } do %>
                <%= turbo_stream_from "followers_#{current_user.id}" %>


                <div id="follower-list" class="user-list" >
                    <% @followers.each do |follow| %>
                        <div id="follow_<%= follow.id %>" class="user-card" >
                            <%= link_to user_profile_path(user_id: follow.follower.id), 
                                    data: { turbo_frame: "main-content", turbo_action: "advance" } do %>
                                <%= render "profiles/profile_image", profile: follow.follower.profile %>
                                <%= follow.follower.username %>
                            <% end %>
                            <%= render "follows/follow_link", user: follow.follower %>
                        </div>
                    <% end %>
                </div>
            <% end %>
        </div>
    </div>
<% end %>
