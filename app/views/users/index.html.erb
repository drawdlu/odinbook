<%= turbo_frame_tag "main-content" do %>
    <input type="hidden" id="page-id" value="users-link">
    <h1>Users</h1>

    <div class="users">
        <div class="container">
            <%= turbo_stream_from "user_index_#{current_user.id}" %>
            <% @users.each do |user| %>
                <div class="user">
                    <%= user.username %>
                    <%= render "follows/follow_link", user: user %>
                </div>
                <br>
            <% end %>
        </div>
    </div>
<% end %>

