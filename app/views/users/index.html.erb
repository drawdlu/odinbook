<%= turbo_frame_tag "main-content", data: { page_id: "users-link" } do %>
    <div class="container">
        <div class="page">
            <div class="title">
                <h3>Users</h3>
            </div>
            <div class="users">
                <div class="container">
                    <%= turbo_stream_from "user_index_#{current_user.id}" %>
                    <% @users.each do |user| %>
                        <div class="user">
                            <%= link_to user_profile_path(user_id: user.id), 
                                    data: { turbo_action: "advance" } do %>
                                <%= render "profiles/profile_image", profile: user.profile %>
                                <%= user.username %>
                            <% end %>
                            <%= render "follows/follow_link", user: user %>
                        </div>
                        <br>
                    <% end %>
                </div>
            </div>
        </div>
    </div>
<% end %>

